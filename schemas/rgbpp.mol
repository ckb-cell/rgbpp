import blockchain;

# RGBPP config
struct RGBPPConfig {
  # Type hash of bitcoin light client
  bitcoin_lc_type_hash: Byte32,
  # Type hash of bitcoin time lock contract
  bitcoin_time_lock_type_hash: Byte32,
}

# RGBPP lock args
struct RGBPPLock {
  out_index: Uint32,
  bitcoin_transaction_hash: Byte32,
}

# RGBPP unlock witness
table RGBPPUnlock {
  bitcoin_transaction: Bytes,
  previous_ckb_transaction: Transaction,
}
